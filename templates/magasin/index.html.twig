{% extends 'base.html.twig' %}

{% block title %}Commerce de Pokémons{% endblock %}

{% block body %}
    <h3>Bienvenue dans le magasin !</h3>
	<h5>Veuillez acheter votre nouveau Pokémon</h5>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
				<th>Sexe</th>
				<th>Niveau</th>
				<th>Prix</th>
				<th>Dresseur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon in pokemons %}
            <tr>
                <td>{{ pokemon.id }}</td>
				<td>{{ pokemon.nom }}</td>
				<td>{{ pokemon.sexe }}</td>
				<td>{{ pokemon.niveau }}</td>
				<td>{{ pokemon.prix_vente }}</td>
				<td>{{ pokemon.dresseur_id }}</td>
                <td>
                    <a href="{{ path('shop_acheter', {'id': pokemon.id}) }}">Acheter</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Magasin est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	
{% endblock %}
